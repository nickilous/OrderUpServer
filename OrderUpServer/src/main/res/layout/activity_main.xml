<LinearLayout
    android:orientation="vertical"
    android:layout_height="fill_parent"
    android:layout_width="fill_parent"
    android:id="@+id/full_screen_content"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:orientation="vertical"
        android:layout_height="329px"
        android:layout_width="fill_parent"
        android:layout_gravity="center_vertical">
        <TextView
            android:layout_height="300px"
            android:layout_width="fill_parent"
            android:text="Pizzas Ready
at Pick-Up Window"
            android:textSize="129sp"
            android:textStyle="bold"
            android:textColor="#BA0031"
            android:gravity="center_horizontal" />

        <!--ImageView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/costco_logo_view"
            android:src="@drawable/o_r"
            android:layout_gravity="center_vertical"
            android:contentDescription="Costco Logo"-->

    </LinearLayout>
    <LinearLayout
        android:layout_height="65dp"
        android:layout_width="fill_parent"
        android:orientation="horizontal">
        <TextView
            android:layout_height="fill_parent"
            android:layout_width="540dp"
            android:text="Order Numbers:"
            android:textStyle="bold"
            android:gravity="center_horizontal"
            android:textSize="60sp"/>
        <TextView
            android:layout_height="fill_parent"
            android:layout_width="540dp"
            android:textStyle="bold"
            android:text="Order Times:"
            android:textSize="60sp"
            android:gravity="center_horizontal" />


    </LinearLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="1250px"
        android:layout_gravity="center">

        <!--TextView
            android:layout_width="540dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Order Number:"
            android:id="@+id/order_number_txt"
            android:textSize="40sp"
            android:textStyle="bold" /-->

        <!--TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_toRightOf="@id/order_number_txt"
            android:id="@+id/order_time_txt"
            android:textSize="40sp"
            android:textStyle="bold"
            android:text="Order Time:" /-->

        <ListView
            android:layout_height="fill_parent"
            android:layout_width="540dp"
            android:id="@+id/order_number_list"
            android:layout_alignParentLeft="true"
            android:textAlignment="center" />

        <ListView
            android:layout_height="fill_parent"
            android:layout_width="540dp"
            android:id="@+id/order_time_list"
            android:layout_toRightOf="@id/order_number_list"
            android:textAlignment="center"
            android:layout_gravity="left" />
    </RelativeLayout>


    <GridLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">


        <DigitalClock
            android:id="@+id/digiClock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DigitalClock"
            android:layout_row="1"
            android:layout_column="17"
            android:textSize="60sp" />


    </GridLayout>

</LinearLayout>